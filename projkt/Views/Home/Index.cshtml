@model IEnumerable<projkt.Company>

@{
    ViewBag.Title = "Index";
}

<h2>Companies Where You Can Order Food</h2>

<p>
    
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.logo_url)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.avg_rating)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.pricing_pct)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.register_date)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.type)
        </td>
        <td style=" width:20%;">
            <img src="@item.logo_url" class='.img-thumbnail' style=" width:30%; margin-left:25%" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.avg_rating)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.pricing_pct)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.register_date)
        </td>
        <td>
            <a href="/Create/Menu?id=@item.Id">-Change Menu-</a>
            <a href="/Home/Menu?id=@item.Id">-Details-</a>
            @Html.ActionLink("Delete", "../Delete/Company", new { id=item.Id })
        </td>
    </tr>
}

</table>
